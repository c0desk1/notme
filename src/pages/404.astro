---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="404">
  <section class="text-center mt-32">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-lg text-muted mb-6">Halaman tidak ditemukan, mungkin sudah dipindahkan atau dihapus.</p>
    <a href="/" class="inline-block px-6 py-3 rounded-lg bg-white text-black font-semibold hover:bg-gray-200 transition">
      Kembali ke Beranda
    </a>
  </section>
</BaseLayout>

<style>
  .text-muted {
    color: var(--color-muted);
  }
</style>
