---
const { title, url, published } = Astro.props;
const date = new Date(published).toLocaleDateString("id-ID", {
  day: "numeric", month: "long", year: "numeric"
});
const slug = url.split("/").filter(Boolean).pop();
---

<article class="mb-6 border-b border-white/10 pb-4">
  <h2 class="text-xl font-semibold text-white">
    <a href={`/blog/${slug}`} class="hover:text-blue-400 transition">
      {title}
    </a>
  </h2>
  <p class="text-sm text-zinc-400">Dipublikasikan: {date}</p>
</article>
